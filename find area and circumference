//Write a program to find area and circumference of circle.

#include<stdio.h>
#include<conio.h>
int main()
{
int rad;
float PI=3.14,area,ci;
clrscr();
printf("Enter radius of circle:");
scanf("%d",&rad);
area=PI*rad*rad;
printf("\nArea of circle: %f",area);
ci=2*PI*rad;
printf("\nCircumference: %f",ci);
getch();
}
